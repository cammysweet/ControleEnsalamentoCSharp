<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="nav nav-tabs nav-justified">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cadastro de Ensalamento", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="nav nav-tabs nav-justified">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Consulta Ensalamento", "List", "Ensalamento")</li>
                    <li>@Html.ActionLink("Consulta Professores", "List", "Professores")</li>
                    <li>@Html.ActionLink("Consulta Salas", "List", "Salas")</li>
                    <li>@Html.ActionLink("Consulta Turmas", "List", "Turmas")</li>
                    <li>@Html.ActionLink("Outras Consultas", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ensalamentos - Projeto</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
